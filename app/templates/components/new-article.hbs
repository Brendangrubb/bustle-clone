{{#if addNewArticle}}
  <h2>Add a New Article to my Bustle-Clone!</h2>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input class="form-control" value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input class="form-control" value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="teaser">Teaser</label>
      {{input class="form-control" value=teaser id="teaser"}}
    </div>
    <div class="form-group">
      <label for="body">Article Body</label>
      {{input class="form-control" rows="8" value=body id="body"}}
    </div>
    <div class="form-group">
      <label for="photo">Image URL</label>
      {{input class="form-control" value=photo id="photo"}}
    </div>
    <button class="btn" {{action 'saveArticle'}}>Add Article</button>
  </form>
{{else}}
  <button class="btn" {{action 'articleFormShow'}}>Add a New Article</button>
{{/if}}
